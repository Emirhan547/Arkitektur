
@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Kategoriler</h3>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td>
                <button onclick="deleteCategory(@item.Id)" class="btn btn-outline-danger"><i class="fa fa-trash"></i>Sil</button>
                <a href="/Admin/Category/EditCategory/@item.Id"class="btn btn-outline-danger"><i class="fa fa-edit"></i>Düzenle</a>
            </td>
        </tr>
    }
</table>
<a asp-action="CreateCategory"asp-controller="Category"asp-area="Admin" class="btn btn-outline-primary"><i class="fa fa-plus-circle"></i>Yeni Kategori Oluştur</a>

<script>
    function deleteCategory(id){
           Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {
         
          window.location.href = '/Admin/Category/DeleteCategory/' + id;
       
      }
    });
    }
</script>