@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Hizmet Güncelle</h3>
<div class="card text-center">
    <div class="card-header">
        <h4>Hizmet Arkaplan Görseli</h4>
    </div>
    <div class="car-body">
        <img src="@Model.BackgroundImage" style="height:75px;width:75px" alt="Hizmet Arkaplan Görseli" />
    </div>
</div>
<form method="post" enctype="multipart/form-data">
    <input type="hidden"asp-for="Id"/>
    <input type="hidden"asp-for="BackgroundImage"/>
    <div class="form-group">
        <label>Hizmet Arka Plan Resmini Güncellemek için yeni resim seçebilirsiniz</label>
        <input type="file" asp-for="File" class="form-control" />
        <span class="text-danger" asp-validation-for="File"></span>
    </div>
    <div class="form-group">
        <label>Hizmet Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <textarea type="text" asp-for="Description" class="form-control" rows="4"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label>İkon</label>
        <input type="text" asp-for="Icon" class="form-control" />
        <span class="text-danger" asp-validation-for="Icon"></span>
    </div>

    <button class="btn btn-outline-primary"><i class="fa fa-save"></i>Güncelle</button>
</form>