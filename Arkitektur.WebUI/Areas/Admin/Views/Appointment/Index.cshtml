
@model List<ResultAppointmentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Randevular</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Hizmet Türü</th>
        <th>Tarih</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.NameSurname</td>
            <td>@item.ServiceName</td>
            <td>@item.AppointmentDate</td>
            <td><span class="badge badge-primary"></span>@item.Status</td>
            <td>
                <button title="Sil" onclick="deleteAppointment(@item.Id)" class="btn btn-outline-danger"><i class="fa fa-trash"></i>Sil</button>
                <a title="Onayla" href="/Admin/Appointment/ApproveAppointment/@item.Id" class="btn btn-outline-success"><i class="fa fa-check"></i></a>
                <a title="İptal Et" href="/Admin/Appointment/CancelAppointment/@item.Id" class="btn btn-outline-warning"><i class="fa fa-times"></i> </a>
                <a title="Detayı Gör" href="/Admin/Appointment/AppointmentDetails/@item.Id" class="btn btn-outline-dark"><i class="fa fa-eye"></i> </a>
            </td>
        </tr>
    }
</table>


<script>
    function deleteAppointment(id){
           Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {

          window.location.href = '/Admin/Appointment/DeleteAppointment/' + id;

      }
    });
    }
</script>