@model List<AssignRoleDto>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Rol Atama İşlemi</h3>
<div class="alert alert-info">@Model[0].FullName kullanıcısına rol atama işlemlerini aşağıdan gerçekleştirebilirsiniz</div>
<form method="post">
       @for(int i=0; i < Model.Count; i++)
       {
           <div>
               <input type="checkbox" asp-for="@Model[i].RoleExist" />
               <label asp-for="@Model[i].RoleExist">@Model[i].RoleName</label>
               <input type="hidden" asp-for="@Model[i].RoleName" />
               <input type="hidden" asp-for="@Model[i].UserId" />
               <input type="hidden" asp-for="@Model[i].RoleId" />
           </div>
    }
    <button class="btn btn-outline-primary">Rol Ata</button>
</form>