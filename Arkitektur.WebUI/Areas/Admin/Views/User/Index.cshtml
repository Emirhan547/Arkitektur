
@model List<ResultUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Kullanıcılar</h3>

<h3>Kategoriler</h3>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Email</th>
        <th>Kullanıcı Adı</th>
        <th>Roller</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.FirstName @item.LastName</td>
            <td>@item.Email</td>
            <td>@item.UserName</td>
            <td>
                @foreach(var role in item.Roles)
                {
                    <span class="badge badge-info">@role</span>
                    <br />
                }
    
            </td>
            <td>
                <button title="Sil"onclick="deleteUser(@item.Id)" class="btn btn-outline-danger"><i class="fa fa-trash"></i></button>
                <a title="Rol Ata" href="/Admin/User/AssignRole/@item.Id" class="btn btn-outline-info"><i class="fa fa-user-secret"></i></a>
            </td>
        </tr>
    }
</table>


<script>
    function deleteUser(id){
           Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {

          window.location.href = '/Admin/User/DeleteUser/' + id;

      }
    });
    }
</script>