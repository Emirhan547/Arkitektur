
@model List<ResultProjectDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Projeler</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th colspan="2">Proje Başlığı</th>
        <th>Açıklama</th>
        <th>Madde 1</th>
        <th>Madde 2</th>
        <th>Madde 3</th>
        <th>Kategori</th>
        <th>İşlemler</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td colspan="2">
                <img src="@item.ImageUrl" style="height:100px; width:100px;" />
                @item.Title
            </td>
            <td>@item.Description</td>
            <td>@item.Item1</td>
            <td>@item.Item2</td>
            <td>@item.Item3</td>
            <td>@item.Category.CategoryName</td>

            <td>
                <button onclick="deleteProject(@item.Id)" class="btn btn-outline-danger"><i class="fa fa-trash"></i></button>
                <a href="/Admin/Project/UpdateProject/@item.Id" class="btn btn-outline-info"><i class="fa fa-edit"></i></a>
            </td>
        </tr>
    }
</table>
<a asp-action="CreateProject" asp-controller="Project" asp-area="Admin" class="btn btn-outline-primary"><i class="fa fa-plus-circle"></i>Yeni Proje Oluştur</a>

<script>
    function deleteProject(id){
           Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {

          window.location.href = '/Admin/Project/DeleteProject/' + id;

      }
    });
    }
</script>