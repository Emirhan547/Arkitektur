@model CreateTeamSocialDto
@{
    ViewData["Title"] = "CreateTeamSocial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Ekip Üyesi Yeni Sosyal Medya Oluştur</h3>

<form method="post" >
   
    <div class="form-group">
        <label>Ekip Üyesi </label>
        <select asp-for="TeamId" class="form-control" asp-items="@ViewBag.teams">
            <option selected disabled>Ekip Üyesi Seçiniz</option>
        </select>
        <span class="text-danger" asp-validation-for="TeamId"></span>
    </div>
    <div class="form-group">
        <label>Sosyal Medya Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label>İkon</label>
        <input type="text" asp-for="Icon" class="form-control"/>
        <span class="text-danger" asp-validation-for="Icon"></span>
    </div>
    <div class="form-group">
        <label>Url</label>
        <input type="text" asp-for="Url" class="form-control" />
        <span class="text-danger" asp-validation-for="Url"></span>
    </div>
    
    
    <button class="btn btn-outline-primary"><i class="fa fa-save"></i>Kaydet</button>
</form>