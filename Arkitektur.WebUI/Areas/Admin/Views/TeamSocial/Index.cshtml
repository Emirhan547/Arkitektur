
@model List<ResultTeamDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Ekip Spsyal Medya Hesapları</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Sosyal Medya Hesapları ve İşlemler</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.NameSurname</td>
            <td>
                @foreach(var social in item.TeamSocials)
                {
                    <a title="@social.Title" href="@social.Url" target="_blank" class="btn btn-info"><i class="@social.Icon"></i></a>
                    <button title="Sil" onclick="deleteTeamSocial(@social.Id)" class="btn btn-outline-danger"><i class="fa fa-trash"></i> </button>
                    <a title="Güncelle" href="/Admin/TeamSocial/UpdateTeamSocial/@social.Id" class="btn btn-outline-info"><i class="fa fa-edit"></i> </a>

                    <br />
            
                    <br />
                }
               
                
            </td>
        </tr>
    }
</table>
<a asp-action="CreateTeamSocial" asp-controller="TeamSocial" asp-area="Admin" class="btn btn-outline-primary"><i class="fa fa-plus-circle"></i>Yeni Sosyal Medya Oluştur</a>

<script>
    function deleteTeamSocial(id){
           Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {

          window.location.href = '/Admin/TeamSocial/DeleteTeamSocial/' + id;

      }
    });
    }
</script>