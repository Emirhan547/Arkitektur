@model UpdateTeamDto
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Ekip Üyesi Güncelle</h3>

<div class="card text-center">
    <div class="card-header">
        <h4>Ekip Üyesi Profil Fotoğrafı Görseli</h4>
    </div>
    <div class="car-body">
        <img src="@Model.ImageUrl" style="height:75px;width:75px" alt="Profil Fotoğrafı" />
    </div>
</div>

<form method="post" enctype="multipart/form-data">
    <input type="hidden"asp-for="Id"/>
    <input type="hidden"asp-for="ImageUrl"/>
    <div class="form-group">
        <label>Ekip Üyesi Profil Fotoğrafı Güncellemek için yeni fotoğraf seçebilirsiniz</label>
        <input type="file" asp-for="File" class="form-control" />
        <span class="text-danger" asp-validation-for="File"></span>
    </div>
    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" asp-for="NameSurname" class="form-control" />
        <span class="text-danger" asp-validation-for="NameSurname"></span>
    </div>
    <div class="form-group">
        <label>Unvan</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <button class="btn btn-outline-info">Güncelle</button>

</form>

