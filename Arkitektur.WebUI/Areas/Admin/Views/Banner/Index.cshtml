
@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Banner Listesi</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İşlemler</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>
                <img src="@item.ImageUrl" style="height:100px; width:100px;" />
            </td>
            <td>@item.Title</td>
           
            <td>@item.Description</td>
            <td>
                <button onclick="deleteBanner(@item.Id)" class="btn btn-outline-danger"><i class="fa fa-trash"></i></button>
                <a href="/Admin/Banner/UpdateBanner/@item.Id" class="btn btn-outline-info"><i class="fa fa-edit"></i></a>
            </td>
        </tr>
    }
</table>
<a asp-action="CreateBanner" asp-controller="Banner" asp-area="Admin" class="btn btn-outline-primary"><i class="fa fa-plus-circle"></i>Yeni Banner Oluştur</a>

<script>
    function deleteBanner(id){
           Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {

          window.location.href = '/Admin/Banner/DeleteBanner/' + id;

      }
    });
    }
</script>