@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Banner Güncelle</h3>
<div class="card text-center">
    <div class="card-header">
        <h4>Banner Görseli</h4>
    </div>
    <div class="car-body">
        <img src="/@Model.ImageUrl" style="height:75px;width:75px" alt="Hakkımızda Görseli" />
    </div>
</div>
<form method="post" enctype="multipart/form-data">
    <input type="hidden"asp-for="Id"/>
    <input type="hidden"asp-for="ImageUrl"/>
    <div class="form-group">
        <label>Banner Görselini değiştirmek için yeni görsel seçebilirsiniz</label>
        <input type="file" asp-for="File" class="form-control" />
        <span class="text-danger" asp-validation-for="File"></span>
    </div>
    <div class="form-group">
        <label>Başlık</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <textarea type="text" asp-for="Description" class="form-control" rows="4"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <button class="btn btn-outline-primary"><i class="fa fa-save"></i>Kaydet</button>
</form>