@model CreateBannerDto
@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Yeni Banner Oluştur</h3>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Banner Görseli</label>
        <input type="file" asp-for="File" class="form-control" />
        <span class="text-danger" asp-validation-for="File"></span>
    </div>
    <div class="form-group">
        <label>Başlık</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <textarea type="text" asp-for="Description" class="form-control" rows="4"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
 
    <button class="btn btn-outline-primary"><i class="fa fa-save"></i>Kaydet</button>
</form>