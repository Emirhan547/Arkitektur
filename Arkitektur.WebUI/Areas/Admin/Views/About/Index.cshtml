
@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Hakkımızda</h3>
<div class="alert alert-warning">
    <h6><strong>Lütfen proje görsel bütünlüğü açısından yalnızca 1 adet veri girişi yapınız.</strong></h6>
</div>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th colspan="2">Başlık</th>
        <th>Açıklama</th>
        <th>Sektöre Giriş Yılı</th>
        <th>İşlemler</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td colspan="2"><img src="@item.ImageUrl" style="height:100px; width:100px;" /><br />
                @item.Title
                </td>
            <td>@item.Description</td>
            <td>@item.StartYear</td>

            <td>
                <button onclick="deleteAbout(@item.Id)" class="btn btn-outline-danger"><i class="fa fa-trash"></i></button>
                <a href="/Admin/About/UpdateAbout/@item.Id" class="btn btn-outline-info"><i class="fa fa-edit"></i></a>
            </td>
        </tr>
    }
</table>
<a asp-action="CreateAbout" asp-controller="About" asp-area="Admin" class="btn btn-outline-primary"><i class="fa fa-plus-circle"></i>Yeni Hakkımızda Oluştur</a>

<script>
    function deleteAbout(id){
           Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {

          window.location.href = '/Admin/About/DeleteAbout/' + id;

      }
    });
    }
</script>