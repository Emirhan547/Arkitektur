<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Arkitektur.WebUI</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/chat-assistant.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Arkitektur.WebUI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Arkitektur.WebUI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <button id="chatAssistantToggle" class="chat-toggle-btn d-flex align-items-center justify-content-center" aria-expanded="false" aria-controls="chatAssistantPanel">
        <span class="visually-hidden">Open assistant chat</span>
        <span aria-hidden="true">💬</span>
    </button>

    <section id="chatAssistantPanel" class="chat-panel shadow-lg" aria-live="polite">
        <div class="chat-panel__header d-flex align-items-center justify-content-between">
            <div>
                <p class="mb-0 fw-semibold">Arkitektur Asistanı</p>
                <small class="text-muted">Sorularınızı yanıtlamak için buradayım.</small>
            </div>
            <button type="button" class="btn btn-link text-decoration-none text-muted p-0 chat-panel__close" aria-label="Kapat">
                <span aria-hidden="true">✕</span>
            </button>
        </div>
        <div class="chat-panel__body">
            <ul id="chatAssistantMessages" class="list-unstyled mb-0"></ul>
        </div>
        <form id="chatAssistantForm" class="chat-panel__footer">
            <label class="form-label w-100 mb-2" for="chatAssistantInput">Sorunuzu yazın</label>
            <div class="input-group">
                <textarea id="chatAssistantInput" class="form-control" rows="2" placeholder="Örn: Randevu nasıl alırım?" required></textarea>
                <button class="btn btn-primary" type="submit">
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    Gönder
                </button>
            </div>
        </form>
    </section>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Arkitektur.WebUI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chat-assistant.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
