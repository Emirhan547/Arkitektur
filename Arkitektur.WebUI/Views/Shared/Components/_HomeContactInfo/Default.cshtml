@model List<ResultContactDto>
@*
    Home Contact Info
*@

@foreach(var item in Model)
{
    <div class="row g-4">
        <div class="col-12">
            <div class="d-flex">
                <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-light" style="width: 65px; height: 65px;">
                    <i class="fa fa-2x fa-phone-alt text-primary"></i>
                </div>
                <div class="ms-4">
                    <p class="mb-2">Hemen Bizi Arayın</p>
                    <h3 class="mb-0">@item.PhoneNumber</h3>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="d-flex">
                <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-light" style="width: 65px; height: 65px;">
                    <i class="fa fa-2x fa-envelope-open text-primary"></i>
                </div>
                <div class="ms-4">
                    <p class="mb-2">Mail Adresiniz</p>
                    <h3 class="mb-0">@item.Email</h3>
                </div>
            </div>
        </div>
    </div>
}
