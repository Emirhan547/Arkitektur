@model List<ResultCategoriesWithProjectsDto>
@*
    Home Project Component 
*@

@{
    int count = 0;
    int count2 = 0;
}
<div class="container-xxl project py-5" id="projeler">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h4 class="section-title">Projelerimiz</h4>
            <h1 class="display-5 mb-4">Visit Our Latest Projects And Our Innovative Works</h1>
        </div>
        <div class="row g-4 wow fadeInUp" data-wow-delay="0.3s">
            <div class="col-lg-4">
                <div class="nav nav-pills d-flex justify-content-between w-100 h-100 me-4">
                    @foreach (var category in Model)
                    {
                        count++;
                        <button class="nav-link w-100 d-flex align-items-center text-start p-4 mb-4 @(count==1?"active" :"")" data-bs-toggle="pill" data-bs-target="#tab-pane-@category.Id" type="button">
                            <h3 class="m-0">@count. @category.CategoryName</h3>
                        </button>
                    }
             
                </div>
            </div>
            <div class="col-lg-8">
                
                <div class="tab-content w-100">
                    @foreach (var category in Model)
                    {
                        @foreach(var project in category.Projects)
                        {
                            count2++;
                            <div class="tab-pane fade show @(count2== 1 ? "active" : "")" id="tab-pane-@category.Id">
                                <div class="row g-4">
                                    <div class="col-md-6" style="min-height: 350px;">
                                        <div class="position-relative h-100">
                                            <img class="position-absolute img-fluid w-100 h-100" src="@project.ImageUrl"
                                                 style="object-fit: cover;" alt="">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h1 class="mb-3">@project.Title</h1>
                                        <p class="mb-4">@project.Description</p>
                                        <p><i class="fa fa-check text-primary me-3"></i>@project.Item1</p>
                                        <p><i class="fa fa-check text-primary me-3"></i>@project.Item2</p>
                                        <p><i class="fa fa-check text-primary me-3"></i>@project.Item3</p>
                                        <a asp-controller="Project" asp-action="Details" asp-route-id="@project.Id" class="btn btn-primary py-3 px-5 mt-3">Devamını Gör</a>
                                    </div>
                                </div>
                            </div>
                        }
                       
                    }
                   

                </div>
            </div>
        </div>
    </div>
</div>