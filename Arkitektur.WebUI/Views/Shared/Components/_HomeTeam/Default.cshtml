
@model List<ResultTeamDto>
@*
    Home Team Component
*@
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h4 class="section-title">Ekip Üyelerimiz</h4>
            <h1 class="display-5 mb-4">Hayallerinizdeki Evi Tsarlayacak Ekip Üyelerimizle Tanışın </h1>
        </div>
        <div class="row g-0 team-items">
            @foreach(var item in Model)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item position-relative">
                        <div class="position-relative">
                            <img class="img-fluid" src="@item.ImageUrl"style="height:250px;width:300px" alt="">
                            <div class="team-social text-center">
                                @foreach(var social in item.TeamSocials)
                                {
                                    <a title="@social.Title" class="btn btn-square" href="@social.Url"target="_blank"><i class="@social.Icon"></i></a>
                                }
                                
                            </div>
                        </div>
                        <div class="bg-light text-center p-4">
                            <h3 class="mt-2">@item.NameSurname</h3>
                            <span class="text-primary">@item.Title</span>
                        </div>
                    </div>
                </div>  
            }


    </div>
</div>
</div>