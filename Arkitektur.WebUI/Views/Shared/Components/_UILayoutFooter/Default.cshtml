@model Arkitektur.WebUI.Models.FooterViewModel
@*
    UI Layout Footer
*@
<div class="container-fluid bg-dark text-body footer mt-5 pt-5 px-0 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-3 col-md-6">
                <h3 class="text-light mb-4">İletişim</h3>
                @if (Model?.Contacts is { Count: > 0 })
                {
                    foreach (var contact in Model.Contacts)
                    {
                        <p class="mb-2">
                            <i class="fa fa-map-marker-alt text-primary me-3"></i>
                            @contact.Address
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-phone-alt text-primary me-3"></i>
                            @contact.PhoneNumber
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-envelope text-primary me-3"></i>
                            @contact.Email
                        </p>
                    }
                }
                else
                {
                    <p class="mb-0 text-light-50">İletişim bilgileri yakında eklenecek.</p>
                }
                <div class="d-flex pt-2">
                    <a class="btn btn-square btn-outline-body me-1" href="#"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-square btn-outline-body me-1" href="#"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-square btn-outline-body me-1" href="#"><i class="fab fa-youtube"></i></a>
                    <a class="btn btn-square btn-outline-body me-0" href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <h3 class="text-light mb-4">Hizmetlerimiz</h3>
                @if (Model?.Features is { Count: > 0 })
                {
                    foreach (var feature in Model.Features)
                    {
                        <a class="btn btn-link" href="/Services/Index">@feature.Title</a>
                    }
                }
                else
                {
                    <p class="mb-0 text-light-50">Hizmetler yakında eklenecek.</p>
                }
            </div>
            <div class="col-lg-3 col-md-6">
                <h3 class="text-light mb-4">Hızlı Bağlantılar</h3>
                <a class="btn btn-link" href="/About/Index">Hakkımızda</a>
                <a class="btn btn-link" href="/Contact/Index">İletişim</a>
                <a class="btn btn-link" href="/Services/Index">Hizmetlerimiz</a>
                <a class="btn btn-link" href="/Home/Index">Ana Sayfa</a>
            </div>
            <div class="col-lg-3 col-md-6">
                <h3 class="text-light mb-4">Bülten</h3>
                <p>Gelişmelerden haberdar olmak için e-posta adresinizi bırakın.</p>
                <div class="position-relative mx-auto" style="max-width: 400px;">
                    <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="email" placeholder="E-posta adresiniz">
                    <button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">Kaydol</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid copyright">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy; <a href="#">Arkitektur</a>, Tüm Hakları Saklıdır.
                </div>
                <div class="col-md-6 text-center text-md-end">
                    Tasarım <a href="https://htmlcodex.com">HTML Codex</a>
                    <br> Dağıtım: <a class="border-bottom" href="https://themewagon.com" target="_blank">ThemeWagon</a>
                </div>
            </div>
        </div>
    </div>
</div>